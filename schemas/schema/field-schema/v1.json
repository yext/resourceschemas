{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.yext.com/config/schema/field-schema",
  "$version": "1",
  "type": "object",
  "title": "Field Schema",
  "properties": {
    "$id": {
      "type": "string"
    },
    "$schema": {
      "const": "https://schema.yext.com/config/schema/field-schema/v1"
    },
    "type": {
      "anyOf": [
        {
          "$ref": "#/definitions/simpleTypes"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/simpleTypes"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      ]
    },
    "title": {
      "type": "string"
    },
    "format": {
      "type": "string"
    },
    "refKey": {
      "type": "string"
    }
  },
  "required": [
    "$id",
    "$schema",
    "type"
  ],
  "additionalProperties": true,
  "definitions": {
    "simpleTypes": {
      "enum": [
        "array",
        "boolean",
        "integer",
        "null",
        "number",
        "object",
        "string"
      ]
    }
  }
}