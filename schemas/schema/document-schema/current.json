{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.yext.com/config/schema/document-schema",
  "$version": "1",
  "type": "object",
  "title": "Document Schema",
  "properties": {
    "$id": {
      "type": "string"
    },
    "$schema": {
      "const": "https://schema.yext.com/config/schema/document-schema/v1"
    },
    "primaryKey": {
      "type": "string",
      "description": "The field in this schema that uniquely identifies a document instance."
    },
    "type": {
      "const": "object"
    },
    "description": {
      "type": "string"
    },
    "properties": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "anyOf": [
            {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "sourceField": {
                  "type": "string"
                },
                "properties": {
                  "type": "object"
                }
              },
              "description": "A field that is computed from another document."
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "$ref": {
                  "type": "string"
                }
              },
              "description": "A reference to a field schema"
            }
          ]
        }
      }
    }
  },
  "required": [
    "$id",
    "$schema",
    "primaryKey",
    "type"
  ],
  "additionalProperties": true
}