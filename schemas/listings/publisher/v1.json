{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.yext.com/config/listings/publisher",
  "$version": "1",
  "type": "object",
  "title": "Publisher",
  "description": "A resource that represents the configuration of a publisher.",
  "properties": {
    "$id": {
      "type": "string"
    },
    "$schema": {
      "const": "https://schema.yext.com/config/listings/publisher/v1"
    },
    "name": {
      "type": "string",
      "title": "Publisher Name",
      "description": "The name of the publisher."
    },
    "medallion": {
      "type": "string",
      "title": "Publisher Medallion",
      "description": "The medallion of the publisher."
    },
    "description": {
      "type": "string",
      "title": "Publisher Description",
      "description": "The marketing description of the publisher."
    },
    "stream": {
      "type": "object",
      "title": "Stream",
      "description": "Defines the stream delivering data from Knowledge Graph.",
      "properties": {
        "source": {
          "type": "string",
          "title": "Stream Source",
          "description": "Defines source of data for the stream.",
          "enum": [
            "knowledgeGraph"
          ],
          "enumNames": [
            "Knowledge Graph"
          ]
        },
        "fields": {
          "type": "array",
          "title": "Stream Fields",
          "description": "Defines fields of data in the stream.",
          "unordered": true,
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "filter": {
          "title": "Stream Filter",
          "description": "Defines filters on data in the stream.",
          "anyOf": [
            {
              "$ref": "#/definitions/filters/kg"
            },
            {
              "$ref": "#/definitions/filters/publishers"
            }
          ]
        }
      }
    },
    "destinationFields": {
      "type": "array",
      "title": "Destination Fields",
      "description": "Names of the fields the publisher accepts that will be mapped to.",
      "items": {
        "type": "string",
        "title": "Destination Field",
        "description": "Name of the publisher field.",
        "unordered": true
      }
    },
    "mappings": {
      "type": "array",
      "title": "Mapping",
      "description": "The mapping generated between headers and publisher fields.",
      "items": {
        "$ref": "#/definitions/mapping"
      }
    }
  },
  "destination": {
    "type": "string",
    "title": "Publisher Destination",
    "description": "Defines the destination and delivery mechanism of data for the publisher.",
    "properties": {
      "destinationConfig": {
        "type": "object",
        "title": "Destination Configuration",
        "description": "Configuration for various types of publisher destinations.",
        "properties": {
          "sftpPublisherConfig": {
            "$ref": "#/definitions/configs/sftpPublisherConfig"
          },
          "functionPublisherConfig": {
            "$ref": "#/definitions/configs/functionPublisherConfig"
          }
        },
        "oneOf": [
          {
            "required": [
              "sftpPublisherConfig"
            ]
          },
          {
            "required": [
              "functionPublisherConfig"
            ]
          }
        ]
      }
    },
    "required": [
      "destinationConfig"
    ]
  },
  "required": [
    "$id",
    "$schema",
    "name",
    "stream",
    "destinationFields",
    "mappings",
    "destination"
  ],
  "definitions": {
    "configs": {
      "sftpPublisherConfig": {
        "type": "object",
        "title": "SFTP Publisher Configuration",
        "description": "Configuration used for an SFTP type publisher.",
        "properties": {
          "sftpCredentials": {
            "type": "object",
            "title": "SFTP Credentials",
            "properties": {
              "address": {
                "type": "string",
                "title": "Address"
              },
              "username": {
                "type": "string",
                "title": "Username"
              },
              "password": {
                "type": "string",
                "title": "Password"
              }
            },
            "required": [
              "address",
              "username",
              "password"
            ]
          },
          "fileFormat": {
            "type": "object",
            "title": "File Format",
            "properties": {
              "fileExtension": {
                "type": "string",
                "title": "File Extension",
                "enum": [
                  "csv",
                  "json"
                ],
                "enumNames": [
                  "CSV",
                  "JSON"
                ],
                "default": "csv"
              }
            },
            "required": [
              "fileExtension"
            ]
          }
        }
      },
      "functionPublisherConfig": {
        "type": "object",
        "title": "Function Publisher Configuration",
        "additionalProperties": false,
        "description": "Configuration used for a function type publisher.",
        "function": {
          "type": "object",
          "additionalProperties": false,
          "title": "Function",
          "description": "Invokes a plugin function.",
          "properties": {
            "mappings": {
              "$ref": "#/definitions/mapping"
            },
            "plugin": {
              "type": "string",
              "title": "Plugin",
              "description": "The reference to a plugin resource that contains a desired function.",
              "format": "platform/plugin"
            },
            "function": {
              "type": "string",
              "title": "Function",
              "description": "The function to invoke."
            }
          },
          "required": [
            "mappings",
            "plugin",
            "function"
          ]
        },
        "required": [
          "function"
        ]
      }
    },
    "mapping": {
      "type": "object",
      "description": "The mapping generated by the transforms.",
      "field": {
        "type": "string",
        "title": "Field"
      },
      "publisherField": {
        "type": "string",
        "title": "Publisher Field",
        "description": "The reference to the field on the publisher."
      },
      "required": [
        "field",
        "publisherField"
      ]
    },
    "filters": {
      "kg": {
        "type": "object",
        "properties": {
          "entityTypes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Entity type IDs to allow."
          },
          "savedFilterIds": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "IDs of the saved filters to apply on entities."
          }
        },
        "description": "Filter configuration for knowledgeGraph.",
        "additionalProperties": false
      },
      "publishers": {
        "type": "object",
        "properties": {
          "publishers": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Publisher IDs to allow."
          }
        },
        "additionalProperties": false
      }
    }
  }
}