{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.yext.com/config/graph/output",
  "$version": "1",
  "type": "object",
  "title": "Graph Output",
  "properties": {
    "$id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "$schema": {
      "const": "https://schema.yext.com/config/graph/output/v1"
    },
    "schema": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://schema.yext.com/schemas/",
      "description": "The schema of the documents produced by this output."
    },
    "includeSchema": {
      "type": "boolean",
      "description": "If true, the fully resolved schema of the output will be returned alongside the data.",
      "default": false
    },
    "label": {
      "type": "string",
      "description": "The label of incoming data this output should apply to."
    },
    "destination": {
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "pages",
            "listings",
            "liveindex"
          ],
          "description": "The service to which output data will be sent."
        },
        {
          "type": "string",
          "description": "The service to which output data will be sent. Only standalone pipelines can specify custom destination services."
        }
      ]
    },
    "locales": {
      "type": "object",
      "description": "The localization configuration.",
      "properties": {
        "primary": {
          "type": "boolean",
          "description": "Produce primary records to the output."
        },
        "tags": {
          "type": "array",
          "description": "Produce records for these locales, if any values are provided.",
          "items": {
            "type": "string",
            "description": "Valid BCP-47 locale identifiers."
          }
        },
        "fallback": {
          "type": "object",
          "description": "What happens when a field in a localized record is not present?",
          "properties": {
            "primary": {
              "type": "boolean",
              "description": "Fall back to the primary record?"
            },
            "tags": {
              "type": "object",
              "description": "A map from record locale to the list of locales that should be fallen back to.",
              "additionalProperties": {
                "type": "array",
                "description": "Ordered list of fallback locales.",
                "items": {
                  "type": "string",
                  "description": "Valid BCP-47 locale identifiers."
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "$id",
    "$schema",
    "schema",
    "label"
  ]
}