{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.yext.com/config/pages/yextsite-config",
  "$version": "1",
  "type": "object",
  "title": "Yext Site",
  "description": "Configures a Yext Site.",
  "properties": {
    "$id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "$schema": {
      "const": "https://schema.yext.com/config/pages/yextsite-config/v1"
    },
    "siteName": {
      "type": "string",
      "description": "The name of the Yext Site. Must be unique within the account.",
      "minLength": 1,
      "maxLength": 50
    },
    "repoConfig": {
      "type": "string",
      "description": "The ID of the repository configuration.",
      "format": "pages/repository"
    },
    "domainConfig": {
      "type": "string",
      "description": "The ID of the site\u0027s domain configuration.",
      "format": "pages/domain"
    },
    "siteSettings": {
      "$ref": "#/definitions/siteSettings"
    },
    "branches": {
      "type": "array",
      "description": "A list of all branches on the site.",
      "items": {
        "$ref": "#/definitions/branch"
      }
    }
  },
  "required": [
    "$id",
    "$schema",
    "siteName"
  ],
  "definitions": {
    "credentials": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": [
        "username",
        "password"
      ]
    },
    "siteSettings": {
      "type": "object",
      "properties": {
        "autoDeploy": {
          "type": "boolean",
          "description": "Whether or not to trigger a new deploy after every commit.",
          "default": true
        },
        "autoStage": {
          "type": "boolean",
          "description": "Whether or not to automatically stage every new deploy.",
          "default": false
        },
        "autoPublish": {
          "type": "boolean",
          "description": "Whether or not to automatically publish every new deploy.",
          "default": false
        },
        "pullRequestsEnabled": {
          "type": "boolean",
          "description": "Whether or not pull requests are enabled for all branches.",
          "default": true
        }
      }
    },
    "branch": {
      "type": "object",
      "description": "Configures a branch.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the branch. Must be unique within a site.",
          "minLength": 1,
          "maxLength": 50
        },
        "stagingCredentials": {
          "type": "object",
          "description": "The credentials used for access to the staging domain.",
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "username",
            "password"
          ]
        },
        "allowedIPs": {
          "type": "array",
          "description": "A list of allowed IP addresses for the branch.",
          "items": {
            "type": "string"
          }
        },
        "envVars": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": [
              "key",
              "value"
            ]
          }
        },
        "isProductionBranch": {
          "type": "boolean",
          "description": "Whether or not the production site should be pinned to this branch.",
          "default": false
        }
      },
      "required": [
        "name"
      ]
    }
  }
}