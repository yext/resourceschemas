{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "jsonpatchOperation": {
      "type": "object",
      "required": [
        "op",
        "path"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/path"
        }
      ],
      "oneOf": [
        {
          "required": [
            "value"
          ],
          "properties": {
            "op": {
              "description": "The operation to perform.",
              "type": "string",
              "enum": [
                "add",
                "replace",
                "test"
              ]
            },
            "value": {
              "description": "The value to add, replace or test."
            }
          }
        },
        {
          "properties": {
            "op": {
              "description": "The operation to perform.",
              "type": "string",
              "enum": [
                "remove"
              ]
            }
          }
        },
        {
          "required": [
            "from"
          ],
          "properties": {
            "op": {
              "description": "The operation to perform.",
              "type": "string",
              "enum": [
                "move",
                "copy"
              ]
            },
            "from": {
              "description": "A JSON Pointer path pointing to the location to move/copy from.",
              "type": "string"
            }
          }
        }
      ]
    },
    "path": {
      "properties": {
        "path": {
          "description": "A JSON Pointer path.",
          "type": "string"
        }
      }
    }
  },
  "$id": "https://schema.yext.com/config/liveindex/spec",
  "$version": "1",
  "type": "object",
  "title": "LiveIndex Spec",
  "properties": {
    "$id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "$schema": {
      "const": "https://schema.yext.com/config/liveindex/spec/v1"
    },
    "schema": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://schema.yext.com/schemas/",
      "description": "The schema of the documents in the index."
    },
    "sourceLabel": {
      "type": "string",
      "description": "Defines the source documents that should be indexed."
    },
    "fieldIndexes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "field": {
            "type": "string"
          }
        },
        "required": [
          "field"
        ]
      },
      "description": "The indexes that should be created on fields from the schema."
    },
    "inputTransform": {
      "type": "object",
      "properties": {
        "jsonpatch": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/jsonpatchOperation"
          }
        },
        "jmespath": {
          "type": "string"
        }
      },
      "oneOf": [
        {
          "required": [
            "jsonpatch"
          ]
        },
        {
          "required": [
            "jmespath"
          ]
        }
      ],
      "description": "A transformation applied to each incoming document."
    },
    "displayName": {
      "type": "string",
      "description": "A friendly name for the index."
    }
  },
  "additionalProperties": false,
  "required": [
    "$id",
    "$schema",
    "schema",
    "sourceLabel"
  ]
}