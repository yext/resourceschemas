{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.yext.com/config/platform/plugins",
  "$version": "1",
  "type": "object",
  "title": "Plugins Configuration",
  "properties": {
    "$id": {
      "type": "string"
    },
    "$schema": {
      "const": "https://schema.yext.com/config/platform/plugins/v1"
    },
    "app": {
      "type": "string",
      "description": "The app that the plugin is associated with."
    },
    "envVars": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "key",
          "value"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "$id",
    "$schema",
    "app"
  ]
}